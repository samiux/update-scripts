  <syscheck>
    <disabled>no</disabled>

    <!-- Frequency that syscheck is executed default every 12 hours -->
    <frequency>43200</frequency>

    <scan_on_start>yes</scan_on_start>

    <!-- Directories to check  (perform all possible verifications) -->
    <directories>/etc,/usr/bin,/usr/sbin</directories>
    <directories>/bin,/sbin,/boot</directories>

    <!-- For Linux only : /home and /home/*/ as well as /home/*/* do not work -->
    <directories realtime="yes">/home/*/Downloads,/home/*/Documents,/home/*/Public</directories>
    <directories realtime="yes">/home/*/Desktop,/home/*/Templates,/home/*/Pictures</directories>
    <!-- For Windows only : C:\Users and C:\Users\*\ as well as C:\Users\*\* do not work too -->
    <!--
    <directories realtime="yes">C:\Users\*\Downloads,C:\Users\*\Documents,C:\Users\*\Desktop</directories>
    <directories realtime="yes">C:\Users\*\Pictures,C:\Users\*\Public</directories>
    -->

    <!-- Files/directories to ignore -->
    <ignore>/etc/mtab</ignore>
    <ignore>/etc/hosts.deny</ignore>

